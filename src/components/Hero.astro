<section class="relative pt-32 pb-20 overflow-hidden">
  <!-- Background grid pattern -->
  <div class="absolute inset-0 bg-grid-pattern opacity-30"></div>

  <!-- Gradient overlay -->
  <div class="absolute inset-0 bg-gradient-to-b from-background via-background/95 to-background"></div>

  <!-- Accent glow -->
  <div class="absolute top-1/4 left-1/2 -translate-x-1/2 w-[600px] h-[400px] bg-accent/20 rounded-full blur-3xl"></div>

  <div class="relative max-w-6xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
    <h1 class="text-4xl sm:text-5xl lg:text-6xl font-bold text-text-primary mb-6 tracking-tight">
      AI Tools by<br />
      <span class="text-accent">raleighawesome</span>
    </h1>

    <p class="text-lg sm:text-xl text-text-secondary max-w-2xl mx-auto mb-10">
      Scripts, commands, and automation for getting things done with AI.
    </p>

    <div class="flex flex-col sm:flex-row items-center justify-center gap-4">
      <a
        href="https://www.tiktok.com/@raleighawesome84"
        target="_blank"
        rel="noopener noreferrer"
        class="btn-primary text-lg px-8 py-4"
        data-umami-event="tiktok-click"
      >
        <svg class="w-5 h-5 mr-2" viewBox="0 0 24 24" fill="currentColor">
          <path d="M19.59 6.69a4.83 4.83 0 01-3.77-4.25V2h-3.45v13.67a2.89 2.89 0 01-5.2 1.74 2.89 2.89 0 012.31-4.64 2.93 2.93 0 01.88.13V9.4a6.84 6.84 0 00-1-.05A6.33 6.33 0 005 20.1a6.34 6.34 0 0010.86-4.43v-7a8.16 8.16 0 004.77 1.52v-3.4a4.85 4.85 0 01-1-.1z"/>
        </svg>
        Follow on TikTok
      </a>
      <a href="#tools" class="btn-secondary text-lg px-8 py-4">
        Browse Tools
        <svg class="w-5 h-5 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3" />
        </svg>
      </a>
      <a href="/consulting" class="btn-secondary text-lg px-8 py-4">
        Work With Me
      </a>
    </div>
  </div>
</section>
